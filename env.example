# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL, MySQL, or MongoDB connection string
DATABASE_URL=postgresql://username:password@localhost:5432/legal_ai_db
# Or for MongoDB:
# DATABASE_URL=mongodb://localhost:27017/legal_ai_db

# =============================================================================
# AUTHENTICATION PROVIDERS
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth
APPLE_ID=your-apple-client-id
APPLE_SECRET=your-apple-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Main OpenAI API Key (required for AI Assistant and Document Generation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Organization ID (optional)
OPENAI_ORG_ID=org-your-organization-id

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MODEL_LEGACY=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# AI ASSISTANT SPECIFIC
# =============================================================================
# System prompt for legal AI assistant
AI_ASSISTANT_SYSTEM_PROMPT=You are a professional legal AI assistant. You help lawyers and legal professionals with case analysis, document review, legal research, and general legal questions. Always provide accurate, well-reasoned responses based on legal principles and current law.

# Conversation memory settings
AI_CONVERSATION_MEMORY_LIMIT=10
AI_MAX_CONVERSATION_LENGTH=50

# =============================================================================
# DOCUMENT GENERATION
# =============================================================================
# Templates and prompts for document generation
DOCUMENT_TEMPLATES_PATH=./templates/documents
DOCUMENT_GENERATION_PROMPT=Generate a professional legal document based on the provided information and template.

# =============================================================================
# EMAIL SERVICE
# =============================================================================
# SMTP Configuration
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Or for SendGrid:
# SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# FILE STORAGE
# =============================================================================
# AWS S3 (recommended for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-legal-ai-bucket

# Or for local storage:
# FILE_STORAGE_PATH=./uploads

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_AI_ASSISTANT=true
ENABLE_DOCUMENT_GENERATION=true
ENABLE_SOCIAL_AUTH=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_NOTIFICATIONS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Debug mode
DEBUG=false
LOG_LEVEL=info

# Mock data for development
USE_MOCK_DATA=true
MOCK_AI_RESPONSES=true

# =============================================================================
# SECURITY
# =============================================================================
# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# JWT settings
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# =============================================================================
# INTEGRATIONS
# =============================================================================
# Legal research APIs
WESTLAW_API_KEY=your-westlaw-api-key
LEXISNEXIS_API_KEY=your-lexisnexis-api-key

# Court filing systems
COURT_FILING_API_KEY=your-court-filing-api-key

# =============================================================================
# CUSTOMIZATION
# =============================================================================
# Branding
NEXT_PUBLIC_APP_NAME=Legal AI System
NEXT_PUBLIC_APP_DESCRIPTION=Intelligent Legal Analysis and Case Management Platform
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Theme and appearance
DEFAULT_THEME=dark-blue
DEFAULT_LANGUAGE=en
